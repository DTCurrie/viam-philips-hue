{
  "$schema": "https://dl.viam.dev/module.schema.json",
  "module_id": "erh:viam-philips-hue",
  "visibility": "public",
  "url": "https://github.com/erh/viam-philips-hue",
  "description": "Philips Hue smart light control module for Viam",
  "models": [
    {
      "api": "rdk:component:switch",
      "model": "erh:viam-philips-hue:hue-light-brightness",
      "short_description": "Philips Hue light on/off and brightness control",
      "markdown_link": "README.md#hue-light-brightness"
    },
    {
      "api": "rdk:component:switch",
      "model": "erh:viam-philips-hue:hue-light-color",
      "short_description": "Philips Hue light RGB color channel control",
      "markdown_link": "README.md#hue-light-color"
    },
    {
      "api": "rdk:component:switch",
      "model": "erh:viam-philips-hue:hue-lights-mode",
      "short_description": "Philips Hue pre-defined lighting modes",
      "markdown_link": "README.md#hue-lights-mode"
    },
    {
      "api": "rdk:service:discovery",
      "model": "erh:viam-philips-hue:hue-discovery",
      "short_description": "Philips Hue Discovery Service"
    }
  ],
  "entrypoint": "bin/viam-philips-hue",
  "first_run": "",
  "build": {
    "build": "make module.tar.gz",
    "setup": "make setup",
    "path": "module.tar.gz",
    "arch": ["linux/amd64", "linux/arm64", "darwin/arm64"]
  }
}
